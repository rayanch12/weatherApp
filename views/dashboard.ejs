<%- include('layout.ejs'); %>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3>Bienvenue <%= user.name %> !</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Informations personnelles :</h5>
                            <p><strong>Nom :</strong> <%= user.name %></p>
                            <p><strong>Email :</strong> <%= user.email %></p>
                            <p><strong>Localisation :</strong> <%= user.location %></p>
                        </div>
                        <div class="col-md-6">
                            <h5>Météo actuelle :</h5>
                            <p><strong>Température :</strong> <%= weatherData.main.temp %>°C</p>
                            <p><strong>Conditions :</strong> <%= weatherData.weather[0].description %></p>
                            <p><strong>Humidité :</strong> <%= weatherData.main.humidity %>%</p>
                            <p><strong>Vitesse du vent :</strong> <%= weatherData.wind.speed %> m/s</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center mt-3">
        <div class="col-md-6">
            <a href="/settings" class="btn btn-secondary btn-lg btn-block">Paramètres</a>
        </div>
        <div class="col-md-6">
            <a href="/logout" class="btn btn-danger btn-lg btn-block">Déconnexion</a>
        </div>
    </div>
</div>
</body>
</html>
